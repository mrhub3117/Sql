CREATE TABLE Customers (
    CustomerID INT PRIMARY KEY,
    CustomerName VARCHAR(100),
    ContactNumber VARCHAR(15),
    Amount DECIMAL (10,2)
);

Insert tablename into(parameters)Values(value1,...);

SELECT * FROM Customers WHERE CustomerID=1;

SELECT * FROM Customers WHERE Amount>150;

SELECT CustomerID,sum(Amount) FROM Customers ;

SELECT CustomerID,Avg(Amount) FROM Customers ;

SELECT CustomerID,Count(Amount) FROM Customers ;

SELECT * FROM Customers ORDER BY CustomerID;

SELECT * FROM Customers ORDER BY CustomerID DESC;

SELECT CustomerID,sum(Amount) FROM Customers GROUP BY CustomerID;
